<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Training Analytics - Gypsy Service Dog Training</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
</head>
<body>
  <%- include('partials/header') %>
  <%- include('partials/nav-enhanced') %>

  <main class="container">
    <h1>ğŸ“Š Training Analytics</h1>
    <p class="subtitle">Visual insights into Gypsy's progress</p>

    <div class="analytics-grid">
      <!-- Progress Chart -->
      <section class="chart-card full-width">
        <h2>Training Phase Progress</h2>
        <canvas id="progressChart"></canvas>
      </section>

      <!-- Training Hours Chart -->
      <section class="chart-card">
        <h2>Weekly Training Hours</h2>
        <canvas id="hoursChart"></canvas>
      </section>

      <!-- Success Rate Chart -->
      <section class="chart-card">
        <h2>Task Success Rates</h2>
        <canvas id="successChart"></canvas>
      </section>

      <!-- Activity Heatmap -->
      <section class="chart-card full-width">
        <h2>Training Activity Calendar</h2>
        <div id="activityCalendar"></div>
      </section>

      <!-- Stats Summary -->
      <section class="stats-summary">
        <h2>Summary Statistics</h2>
        <div class="summary-grid">
          <div class="summary-item">
            <div class="summary-icon">ğŸ“…</div>
            <div class="summary-data">
              <div class="summary-number" id="total-days">0</div>
              <div class="summary-label">Days Training</div>
            </div>
          </div>
          <div class="summary-item">
            <div class="summary-icon">â±ï¸</div>
            <div class="summary-data">
              <div class="summary-number" id="total-hours">0</div>
              <div class="summary-label">Total Hours</div>
            </div>
          </div>
          <div class="summary-item">
            <div class="summary-icon">ğŸ“ˆ</div>
            <div class="summary-data">
              <div class="summary-number" id="avg-success">0%</div>
              <div class="summary-label">Avg Success Rate</div>
            </div>
          </div>
          <div class="summary-item">
            <div class="summary-icon">ğŸ¯</div>
            <div class="summary-data">
              <div class="summary-number" id="tasks-completed">0</div>
              <div class="summary-label">Tasks Completed</div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Export Options -->
    <section class="export-section">
      <h2>Export Analytics</h2>
      <div class="export-buttons">
        <button class="btn btn-primary" onclick="exportToPDF()">ğŸ“„ Export to PDF</button>
        <button class="btn btn-secondary" onclick="exportToCSV()">ğŸ“Š Export to CSV</button>
        <button class="btn btn-secondary" onclick="printCharts()">ğŸ–¨ï¸ Print Charts</button>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>
  <script src="/js/main.js"></script>
  <script src="/js/analytics.js"></script>
  <script>
    // Initialize charts with data
    const data = <%- JSON.stringify(data) %>;
    initializeAnalytics(data);
  </script>
</body>
</html>
